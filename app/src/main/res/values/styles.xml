<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@android:color/white</item>                   <!-- Text color of toolbar title text -->
        <item name="android:textColorSecondary">@android:color/white</item>                 <!-- Text color of navigation drawer icon-->
        <item name="color">@android:color/white</item>                                      <!-- Text color of navigation drawer icon-->
        <item name="actionMenuTextColor">@android:color/white</item>                        <!-- Menu item color-->
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!-- Style for MaterialSearchView on HomeActivity -->
    <style name="MaterialSearchViewStyle">
        <!-- Hint for edit text -->
        <item name="android:hint">@string/activity_home_search_hint</item>
    </style>

    <!--Preference Fragment Styles -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceFixTheme.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
    </style>

</resources>
