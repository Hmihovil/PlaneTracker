<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="primary">@color/primary</item>
        <item name="primary_dark">@color/primary_dark</item>
        <item name="primary_light">@color/primary_light</item>
        <item name="accent">@color/accent</item>
        <item name="primary_text">@color/primary_text</item>
        <item name="secondary_text">@color/secondary_text</item>
        <item name="hint_text">@color/hint_text</item>
        <item name="icons">@color/icons</item>
        <item name="horizontal_divider">@color/divider</item>
        <item name="custom_background">@color/custom_background</item>
    </style>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryDark">@color/dark_primary_dark</item>
        <item name="colorAccent">@color/dark_accent</item>

        <item name="primary">@color/dark_primary</item>
        <item name="primary_dark">@color/dark_primary_dark</item>
        <item name="primary_light">@color/dark_primary_light</item>
        <item name="accent">@color/dark_accent</item>
        <item name="primary_text">@color/dark_primary_text</item>
        <item name="secondary_text">@color/dark_secondary_text</item>
        <item name="hint_text">@color/dark_hint_text</item>
        <item name="icons">@color/dark_icons</item>
        <item name="horizontal_divider">@color/dark_divider</item>
        <item name="custom_background">@color/dark_custom_background</item>
    </style>

    <!--Styles for Appbar, Toolbar and Popups-->
    <style name="AppBarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar" >
        <item name="android:textColorPrimary">@color/white_text</item>                       <!-- Override textColorPrimary to always be white -->
    </style>
    <style name="ToolbarThemeOverlay" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white_text</item>                       <!-- Override textColorPrimary to always be white -->
        <!--<item name="android:textColorSecondary">@android:color/white</item>                 &lt;!&ndash; Text color of navigation drawer icon&ndash;&gt;-->
        <!--<item name="color">@android:color/white</item>                                      &lt;!&ndash; Text color of navigation drawer icon&ndash;&gt;-->
        <!--<item name="actionMenuTextColor">@android:color/white</item>                        &lt;!&ndash; Menu item color&ndash;&gt;-->
    </style>
    <style name="PopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />





    <!-- Style for MaterialSearchView on HomeActivity -->
    <style name="MaterialSearchViewStyle">
        <!-- Hint for edit text -->
        <item name="android:hint">@string/activity_home_search_hint</item>
    </style>

    <!--Preference Fragment Styles -->
    <style name="AppPreferenceTheme" parent="@style/PreferenceFixTheme.Light.NoActionBar">
        <item name="colorPrimary">?primary</item>
        <item name="colorPrimaryDark">?primary_dark</item>
    </style>

    <!--Material Calendar-->
    <style name="CustomDayTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">?primary_text</item>
    </style>

</resources>
