<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/list_item_airport_airline_container"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:padding="8dp"
    >

    <ImageView
        android:id="@+id/list_item_airport_airline_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_centerVertical="true"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="14dp"
        android:tint="?icons"
        android:src="@drawable/ic_airport"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_toEndOf="@+id/list_item_airport_airline_icon"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/list_item_airport_airline_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?primary_text"
            android:fontFamily="sans-serif-light"
            android:textSize="18sp"
            android:maxLines="1"
            android:ellipsize="end"
            />


        <TextView
            android:id="@+id/list_item_airport_airline_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="?secondary_text"
            android:fontFamily="sans-serif-light"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            />
    </LinearLayout>
</RelativeLayout>


