<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="6dp"
    android:layout_marginTop="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    >

    <RelativeLayout
        android:id="@+id/list_item_trip_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/list_item_trip_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/error"
            />

        <TextView
            android:id="@+id/list_item_trip_no_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:scaleType="centerCrop"
            app:layout_collapseMode="parallax"
            android:text="@string/no_image"
            android:textSize="22sp"
            android:textColor="@color/secondary_text"
            android:background="@color/transparent_loading"
            android:gravity="center"
            />



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:src="@drawable/gradient"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="14dp"
            android:layout_marginStart="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginEnd="14dp"
            android:layout_toStartOf="@+id/list_item_trip_menu"
            android:orientation="vertical">
            <TextView
                android:id="@+id/list_item_trip_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_text"
                android:textSize="22sp"
                android:fontFamily="sans-serif-light"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="Placeholder name of trip"/>

            <TextView
                android:id="@+id/list_item_trip_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_text"
                android:textSize="14sp"
                android:fontFamily="sans-serif-light"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Starts October 10"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/list_item_trip_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingTop="14dp"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_more_vert"
            />

    </RelativeLayout>

</android.support.v7.widget.CardView>
