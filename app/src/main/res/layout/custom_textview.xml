<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
        android:id="@+id/custom_textview_icon"
        android:layout_height="18dp"
        android:layout_width="18dp"
        android:layout_marginStart="4dp"
        android:layout_gravity="center_vertical"
        android:tint="@color/custom_edit_text_icon"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/custom_textview_text"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:textSize="14sp"
        android:fontFamily="sans-serif-light"
        android:ellipsize="end"
        android:background="@color/custom_edit_text_background"
        android:textColor="@color/custom_edit_text_text"
        android:textColorHint="@color/custom_edit_text_hint"
        />

</merge>





